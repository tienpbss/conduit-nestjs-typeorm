{
    // this '*' is the default for all languages, unless otherwise specified.
    "[*]": {
        "editor.tabSize": 4
    },
    "[sass]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "editor.detectIndentation": false,
    "cSpell.userWords": ["favorited", "typeorm"]
}